			<%= image_tag "phone.png", :class => "phone" %>
		</div>
	</div>
</div>

<div class="specialsDiv">
	<h2>FEATURED SPECIALS</h2>
	<div id="specialsCarousel" class="carousel slide" data-ride="carousel">
	  <div class="carousel-inner" id="specials-carousel-inner">
	  	<% @specials.each_slice(5) do |five_specials| %>
	  		<div class="item row">
					<% five_specials.each do |special| %>
						<span class="specialItem">
							<%= image_tag "saleBubble2.png", :class => "saleBubble" %>
							<div class="specialImageDiv">
								<%= image_tag special[:image_url], :class => "specialImage" %>
							</div>
							<p class="specialDescription"><%= special[:description] %></p>
								<p class="brandAndWeight">
									<% if special[:brand] %>
										<span class="specialBrand"><%= special[:brand] %></span> | 
										<span class="specialWeight"><%= special[:weight] %> <%= special[:weight_unit] %></span>
									<% end %>
								</p>
							<p class="specialName"><%= special[:name] %></p>
							<p class="specialPrice"><span class="specialRegPrice" 
								<% if special[:sale_price] != nil %>
									style="text-decoration: line-through; color: #aaa;"
								<% end %>
							>
							<%= number_to_currency(special[:regular_price]) %></span> <span class="specialSalePrice"><%= number_to_currency(special[:sale_price]) %></span></p>
						</span>
					<% end %>
				</div>
			<% end %>
	  </div>

	  <!-- Left and right controls -->
	  <a class="left carousel-control" href="#specialsCarousel" data-slide="prev">
	    <span class="sliderArrow glyphicon glyphicon-chevron-left"></span>
	    <span class="sr-only">Previous</span>
	  </a>
	  <a class="right carousel-control" href="#specialsCarousel" data-slide="next">
	    <span class="sliderArrow glyphicon glyphicon-chevron-right"></span>
	    <span class="sr-only">Next</span>
	  </a>
	</div>
</div>
