<div class="container signupContainer">
	<div class="formDiv">
		<h1>Please Log In:</h1>
		<%= form_tag '/login', method: :post do %>
		  <div class="fieldDiv">
		    <%= label_tag :email %>
		    <%= text_field_tag :email %>
		  </div>
		  <div class="fieldDiv">
		    <%= label_tag :password %>
		    <%= password_field_tag :password %>
		  </div>
		  <%= submit_tag "Submit", :class => "btn btn-primary submitBtn addToCartBtn" %>
		<% end %>
	</div>
</div>