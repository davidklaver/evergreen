
<div class="container cancelFormDiv">
	<p>Enter your email address below to cancel your monthly donation:</p>

	<%=form_tag "/orders/cancel_recurring_charge" do %>
		<%= label_tag :email, "Email Address:" %>
		<%= text_field_tag :email, nil, placeholder: 'email@example.com' %>
		<%= label_tag :email_confirmation, "Confirm Email Address:" %>
		<%= text_field_tag :email_confirmation, nil, placeholder: 'email@example.com' %>
		<%= submit_tag "Cancel Monthy Donation", :class => "btn btn-warning" %>
	<% end %>
</div>