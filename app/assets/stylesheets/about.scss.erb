	width: 90%;
	padding: 10px;
	border: 5px solid var(--lightgreen);
	margin: 5%;
}

.aboutH1 {
	margin-top: 5%;
	color: var(--darkgreen);
	font-family: "markdown";
}

.aboutTextDiv p {
