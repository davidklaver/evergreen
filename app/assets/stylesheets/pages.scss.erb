	height: 250px;
	margin: 40px 10px;
	background-color: #e8f8de;
	/*width: 300px;*/
}

.box {
	h4 {
		text-align: left;
		font-family: 'markdown';
		color: var(--darkgreen);
		font-size: 24px;
		width: 50%;
		margin: 20px 20px 5px 20px;
	}
	h5 {
		margin: 0 20px;
		text-align: left;
		color: #777;
		font-family: 'Montserrat';
